{
  "$id": "acquia_eventconnector",
  "$schema": "https://schema.yext.com/config/km/connector/v1",
  "displayName": "Acquia Event Connector",
  "entityType": "yext/event",
  "source": {
    "sourceConfig": {
      "apiPullConfig": {
        "requestType": "GET",
        "url": "${{acquiaDomain}}/jsonapi/node/event",
        "paginationControl": {
          "cursorPagination": {
            "cursor": "links/next",
            "cursorType": "FULL_URL",
            "detectCursorInHeader": false
          }
        },
        "headers": {
          "Accept": "application/vnd.api+json",
          "Content-Type": "application/vnd.api+json"
        },
        "queryParams": {
          "per_page": "50"
        },
        "dataFormat": "JSON"
      }
    },
    "baseSelector": {
      "type": "JSON",
      "header": "data",
      "path": "data"
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "ID",
        "path": "id"
      },
      {
        "type": "JSON",
        "header": "Name",
        "path": "attributes.title"
      },
      {
        "type": "JSON",
        "header": "Description",
        "path": "attributes.body.value"
      },
      {
        "type": "JSON",
        "header": "Door Time",
        "path": "attributes.field_door_time"
      },
      {
        "type": "JSON",
        "header": "Event Start",
        "path": "attributes.field_event_start"
      },
      {
        "type": "JSON",
        "header": "Event End",
        "path": "attributes.field_event_end"
      },
      {
        "type": "JSON",
        "header": "Event Duration",
        "path": "attributes.field_event_duration"
      },
      {
        "type": "JSON",
        "header": "Location",
        "path": "relationships.field_event_place.data.id"
      },
      {
        "type": "JSON",
        "header": "Landing Page URL",
        "path": "attributes.path.alias"
      }
    ]
  },
  "mappings": [
    {
      "field": "yext/description",
      "header": "Description",
      "subfieldPath": []
    },
    {
      "field": "yext/time",
      "header": "Event Start",
      "subfieldPath": [
        {
          "name": "start"
        }
      ]
    },
    {
      "field": "yext/entityId",
      "header": "ID",
      "subfieldPath": []
    },
    {
      "field": "yext/time",
      "header": "Event End",
      "subfieldPath": [
        {
          "name": "end"
        }
      ]
    },
    {
      "field": "yext/name",
      "header": "Name",
      "subfieldPath": []
    },
    {
      "field": "yext/linkedLocation",
      "header": "Location",
      "subfieldPath": []
    },
    {
      "field": "yext/landingPageUrl",
      "header": "Landing Page URL",
      "subfieldPath": []
    }
  ],
  "scheduleConfig": {
    "customSchedule": {
      "timeZone": "America/New_York",
      "startDate": "2021-06-23",
      "startTime": "03:00",
      "frequencyType": "DAILY"
    },
    "runMode": "DEFAULT"
  }
}